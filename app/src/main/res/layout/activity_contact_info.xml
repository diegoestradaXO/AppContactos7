<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactInfo"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">

        <ImageView

                android:layout_marginTop="@android:dimen/notification_large_icon_height"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/setPhoto" />

        <LinearLayout android:layout_gravity="center" android:gravity="center" android:layout_marginTop="25sp"  android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

            <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/showNombre"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout android:layout_gravity="center" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:orientation="vertical"
                      android:id="@+id/call">

            <TextView
                    android:text="Telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/showPhone"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:textSize="25dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/stat_sys_phone_call"
                    android:id="@+id/call2"/>


        </LinearLayout>

        <LinearLayout android:foregroundGravity="center"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_gravity="center" android:gravity="center_horizontal"
                      android:id="@+id/sendMail">

            <TextView
                    android:text="E-mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/showMail"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:textSize="25dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_dialog_email"
                    android:id="@+id/goMail2"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center">


        <Button

                android:layout_marginLeft="25sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Regresar"
                android:id="@+id/home" android:layout_marginStart="25sp"
                android:contentDescription="Home"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:id="@+id/edit"
                android:layout_gravity="right"/>
    </LinearLayout>
</RelativeLayout>